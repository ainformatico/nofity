%h2
  = t('devise.invitations.edit.header')

= form_for resource, as: resource_name, url: invitation_path(resource_name), class: :form, html: { :method => :put } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token

  .form-group
    = f.label :password, t('login.passwords.new_password')
    = f.password_field :password, autofocus: true, class: 'form-control', required: true

  .form-group
    = f.label :password_confirmation, t('login.fields.password_confirmation')
    = f.password_field :password_confirmation, class: 'form-control', required: true

  .form-group.submit
    = f.submit t('devise.invitations.edit.submit_button'), class: 'btn btn-default'
