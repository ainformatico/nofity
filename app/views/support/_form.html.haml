- if @support.errors.any?
  = render 'layouts/messages', flash: { alert: "#{t('home.form.email_address')} #{@support.errors.messages[:email].first}" }

= form_for :support, html: {class: :form, role: :form} do |f|
  .form-group
    = f.email_field :email, class: 'form-control', autofocus: true, placeholder: t('home.form.email_address_placeholder'), value: @email, required: true
    = f.label :email, t('home.form.email_address'), class: 'sr-only'
  .form-group
    = f.label :content, t('support.form.content')
    = f.text_area :content, class: 'form-control', placeholder: t('support.form.content_placeholder'), value: @support.email, required: true, rows: 10
  .form-group.submit
    = f.submit t('form.send'), class: 'btn btn-default'
