!!!
%html.bg
  %head
    %title
      = content_for_title
    - cache(cache_name('public_includes')) do
      = stylesheet_link_tag 'application', media: 'all'
      = javascript_include_tag 'public'
    = csrf_meta_tags
    = render 'shared/metas'
    = render 'shared/detail_metas'
  %body#portfolio
    = render 'home/header', hero: false
    = yield

    %footer#footer-white
      = render 'shared/footer'
    = render 'shared/analytics'
