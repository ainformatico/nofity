!!!
%html.bg
  %head
    %title
      = "#{APP.app_name} - #{t('home.title.slogan')}"
    - cache(cache_name('public_includes')) do
      = stylesheet_link_tag 'application', media: 'all'
      = javascript_include_tag 'public'
    = csrf_meta_tags
    = render 'shared/metas'
    = render 'shared/public_metas'
  %body#portfolio
    = render 'home/header', hero: false
    = yield

    %footer#footer-white
      = render 'shared/footer'
    = render 'shared/analytics'
