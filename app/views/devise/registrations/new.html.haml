%h2 #{t('login.sign_up')}

= form_for(resource, as: resource_name, url: registration_path(resource_name), class: :form) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, t('login.fields.email')
    = f.email_field :email, autofocus: true, class: 'form-control'

  .form-group
    = f.label :password, t('login.fields.password')
    = f.password_field :password, class: 'form-control'

  .form-group
    = f.label :password_confirmation, t('login.fields.password_confirmation')
    = f.password_field :password_confirmation, class: 'form-control'

  .form-group.submit
    = f.submit "#{t('login.sign_up')}", class: 'btn btn-default'

= render 'devise/shared/links'
