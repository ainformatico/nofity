- cache(cache_name('app_header')) do
  %nav.navbar.navbar-default(role="navigation")
    .container
      .container-fluid
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".bs-navbar-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to APP.app_name, dashboard_path, class: 'navbar-brand'
        .collapse.navbar-collapse.bs-navbar-collapse
          %ul.nav.navbar-nav.col-md-4
            %li
              = link_to t('note.all'), note_index_path, id: 'notes-list'
            %li
              = link_to t('note.public'), public_notes_path, id: 'notes-public'
          %ul.nav.navbar-nav.col-lg-5.col-lg-push-4.col-md-3.col-md-push-4.col-sm-4.col-sm-push-6
            %li.dropdown
              %a(href="#" id="user-profile" data-toggle="dropdown" data-bypass="true" class="dropdown-toggle")
                = t('header.profile')
                %i.caret
              %ul.dropdown-menu(role="menu")
                %li
                  = link_to t('header.edit_profile'), edit_user_registration_path, data: {bypass: true}
                %li.divider
                %li
                  = link_to t('header.new_invitation'), new_user_invitation_path, data: {bypass: true}
                %li.divider
                %li
                  = link_to t('header.support'), support_index_path, data: {bypass: true}
            %li
              = link_to t('header.sign_out'), destroy_user_session_path, data: {bypass: true}
